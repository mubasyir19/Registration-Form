<%- include("../../partials/header.ejs") %> <%- include("../../partials/navbar.ejs") %> <%-
include("../../partials/sidebar.ejs") %> 

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Detail Candidate</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="/admin/candidate">Candidate</a></li>
            <li class="breadcrumb-item active">Detail</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Detail Candidate "<%= candidate.nama %>" </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/admin/candidate/detail<%= candidate._id %> " method="post" enctype="multipart/form-data">
                <div class="card-body">
                  <div class="form-group">
                    <label for="name">Nama Lengkap</label>
                    <!-- <span class="ml-3 text-red font-italic">*wajib diisi</span> -->
                    <!-- <div class="d-flex justify-content-between">
                    </div> -->
                    <input type="text" class="form-control" id="nama" name="nama" value="<%= candidate.nama %>" placeholder="Masukkan Nama Lengkap" />
                  </div>
                  <div class="form-group">
                    <label for="npm">NPM</label>
                    <input type="text" class="form-control" id="npm" name="npm" value="<%= candidate.npm %>" placeholder="Masukkan Kelas" />
                  </div>
                  <div class="form-group">
                    <label for="kelas">Kelas</label>
                    <input type="text" class="form-control" id="kelas" name="kelas" value="<%= candidate.kelas %>" placeholder="Masukkan NPM" />
                  </div>
                  <div class="form-group">
                    <label>Region</label>
                    <select class="form-control select2" style="width: 100%" name="region">
                      <option selected="selected"><%= candidate.region %> </option>
                      <option value="Depok">Depok</option>
                      <option value="Kalimalang">Kalimalang</option>
                      <option value="Cengkareng">Cengkareng</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="photo">Photo</label>
                    <!-- <input type="file" class="form-control" id="photo" name="photo" value="<%= candidate.photo %> " /> -->
                    <br>
                    <img id="preview" src="http://localhost:3000/uploads/<%= candidate.photo %>" width="auto" height="200" alt="">
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-4">
                        <h3 for="cv">CV</h3>
                        <a class="btn btn-light shadow p-3 mb-3 bg-body-tertiary rounded" href="/admin/pdf?file=<%= candidate.cv %>" target="_blank">
                          <i class="fas fa-file mr-1"></i>
                          <%= candidate.cv %>
                        </a>
                        <br />
                        <iframe src="http://localhost:3000/uploads/<%= candidate.cv %>" width="auto" height="auto"></iframe>
                      </div>
                      <div class="col-md-4">
                        <h3 for="krs">KRS</h3>
                        <!-- <a href="/admin/pdf?file=<%#= candidate.krs %>" class="btn btn-sm btn-primary mb-3" target="_blank">See More</a>
                        <br> -->
                        <a class="btn btn-light shadow p-3 mb-3 bg-body-tertiary rounded" href="/admin/pdf?file=<%= candidate.krs %>" target="_blank">
                          <i class="fas fa-file mr-1"></i>
                          <%= candidate.krs %>
                        </a>
                        <br />
                        <iframe src="http://localhost:3000/uploads/<%= candidate.krs %>" width="auto" height="auto"></iframe>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-4">
                        <h3 for="ktp">KTP</h3>
                        <!-- <a href="/admin/pdf?file=<%= candidate.ktp %>" class="btn btn-sm btn-primary mb-3" target="_blank">See More</a>
                        <br> -->
                        <a class="btn btn-light shadow p-3 mb-3 bg-body-tertiary rounded" href="/admin/pdf?file=<%= candidate.ktp %>" target="_blank">
                          <i class="fas fa-file mr-1"></i>
                          <%= candidate.ktp %>
                        </a>
                        <br />
                        <iframe src="http://localhost:3000/uploads/<%= candidate.ktp %>" width="auto" height="auto"></iframe>
                      </div>
                      <div class="col-md-4">
                        <h3 for="ktm">KTM</h3>
                        <!-- <a href="/admin/pdf?file=<%= candidate.ktm %>" class="btn btn-sm btn-primary mb-3" target="_blank">See More</a>
                        <br> -->
                        <a class="btn btn-light shadow p-3 mb-3 bg-body-tertiary rounded" href="/admin/pdf?file=<%= candidate.ktm %>" target="_blank">
                          <i class="fas fa-file mr-1"></i>
                          <%= candidate.ktm %>
                        </a>
                        <br />
                        <iframe src="http://localhost:3000/uploads/<%= candidate.ktm %>" width="auto" height="auto"></iframe>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-4">
                        <h3 for="nilai">Rangkuman Nilai</h3>
                        <!-- <a href="/admin/pdf?file=<%= candidate.nilai %>" class="btn btn-sm btn-primary mb-3" target="_blank">See More</a>
                        <br> -->
                        <a class="btn btn-light shadow p-3 mb-3 bg-body-tertiary rounded" href="/admin/pdf?file=<%= candidate.nilai %>" target="_blank">
                          <i class="fas fa-file mr-1"></i>
                          <%= candidate.nilai %>
                        </a>
                        <br />
                        <iframe src="http://localhost:3000/uploads/<%= candidate.nilai %>" width="auto" height="auto"></iframe>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- /.card-body -->
      
                <!-- <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div> -->
              </form>
          </div>
          <!-- /.card -->
      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include("../../partials/footer.ejs") %> <%-
include("../../partials/js.ejs") %>

<script>
  // Preview Photo
  function readURL (input) {
    if(input.files && input.files[0]) {
      const reader = new FileReader();

      reader.onload = function (e) {
        $("#preview").attr('src', e.target.result);
        $("#preview").attr('width', '50%');
        $("#preview").attr('height', '50%');
      }

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#image").change(function() {
    readURL(this);
  });

</script>